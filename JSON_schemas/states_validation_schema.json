{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/states.schema.json",
  "title": "Business Object States Configuration",
  "type": "object",
  "additionalProperties": false,
  "required": ["classes"],
  "properties": {
    "classes": {
      "type": "array",
      "minItems": 0,
      "items": { "$ref": "#/$defs/ClassConfig" }
    }
  },
  "$defs": {
    "NonEmptyString": {
      "type": "string",
      "minLength": 1
    },

    "Identifier": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
    },

    "ClassConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "states"],
      "properties": {
        "name": { "$ref": "#/$defs/Identifier" },
        "states": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/StateConfig" }
        }
      }
    },

    "StateConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "requiredFields"],
      "properties": {
        "name": { "$ref": "#/$defs/Identifier" },
        "requiredFields": {
          "type": "array",
          "items": { "$ref": "#/$defs/Identifier" },
          "uniqueItems": true
        }
      }
    }
  }
}