{
  "type": "rest",
  "id": "notifyEmployee",
  "description": "Send final decision to employee.",
  "request": {
    "method": "POST",
    "url": "${notificationServiceBaseUrl}/notify",
    "body": {
      "to": "${absenceRequest.employeeEmail}",
      "subject": "Absence request ${absenceRequest.requestId}: ${absenceRequest.status}",
      "message": "Hello ${absenceRequest.employeeName}, your request has been ${absenceRequest.status}."
    }
  }
}
